@model ProyectoWeb.Entities.ProductoEnt

@{
    ViewData["Title"] = "EditarProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Información General</h4>

            @using (Html.BeginForm("EditarProducto", "Producto", FormMethod.Post, new { @class = "pt-3" }))
            {
                @ViewBag.MensajePantalla

                @Html.HiddenFor(m => m.IdProducto)

                <div class="form-group">
                    <label>Nombre</label>
                    @Html.TextBoxFor(m => m.nombre, new {  @class="form-control form-control-lg", @type="text", @placeholder="Nombre del Producto" })
                </div>
                <div class="form-group">
                    <label>Usuario</label>
                    @Html.TextBoxFor(m => m.descripcion, new { @class="form-control form-control-lg", @type="text", @placeholder="Descripcion del Producto" })
                </div>
                <div class="form-group">
                    <label>Correo Electrónico</label>
                    @Html.TextBoxFor(m => m.precio, new { @class="form-control form-control-lg", @type="number", @placeholder="Precio del Producto" })
                </div>

                <div class="form-group">
                    <label>Correo Electrónico</label>
                    @Html.TextBoxFor(m => m.imagen, new { @class="form-control form-control-lg", @type="text", @placeholder="Ruta de la imagen del producto" })
                </div>

                <button type="submit" class="btn btn-primary mr-2">Procesar</button>
            }
        </div>
    </div>
</div>
