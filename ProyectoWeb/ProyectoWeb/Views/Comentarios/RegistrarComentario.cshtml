@model ProyectoWeb.Entities.ComentariosEnt

@{
    ViewData["Title"] = "IngresarComentario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper d-flex align-items-center auth px-0" style="margin-top:20px">
    <div class="row col-md-11 mx-0 card mb-4">
        <div class="card-body">
            <div class="mb-3">


                @using (Html.BeginForm("RegistrarComentario", "Comentarios", FormMethod.Post, new { @class = "pt-3" }))
                {
                    @ViewBag.MensajePantalla

                    <div class="mb-3">
                        @* @Html.HiddenFor(m => m.IdUsuario) *@
                    </div>
                    <div class="mb-3">
                        <label for="text" class="form-label">Comentario</label>
                        @Html.TextBoxFor(m => m.comentario, new { @class="form-control", @type="text", @placeholder="Comentario que desee agregar" })
                    </div>

                    <div class="mt-3">
                        <input type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" value="Enviar Comentario">
                    </div>

                }

            </div>
        </div>
    </div>
</div>